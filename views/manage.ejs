		<ul>
			<% errors.forEach(function(error){ %>
			<li><%= error.msg %></li>
			<% }) %>
		</ul>	
	<% } %>
	<form method="post" action="/manage/users">
	<label>Name:</label>
	<input type="text" name="name" value="<%= userdata.name %>">
